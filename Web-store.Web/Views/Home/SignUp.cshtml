@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="text-center">
    <h1 class="display-4">SignUp</h1>
</div>

<form asp-controller="Home" asp-action="SignUp" method="post">

    <div class="mb-3">
        <label for="FirstName" class="form-label">First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" id="FirstName">
    </div>
    
    <div class="mb-3">
        <label for="LastName" class="form-label">Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" id="LastName">
    </div>
        
    <div class="mb-3">
        <label for="NickName" class="form-label">Nick Name</label>
        <input type="text" asp-for="NickName" class="form-control" id="NickName">
    </div>

    <div class="mb-3">
        <label for="Email" class="form-label">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" id="Email">
    </div>

    <div class="mb-3">
        <label for="Password" class="form-label">Password</label>
        <input type="password" asp-for="Password" class="form-control" id="Password">
    </div>

    <div class="mb-3">
        <label for="ConfirmPassword" class="form-label">Password</label>
        <input type="password" asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword">
    </div>

    <div class="mb-3">
        <label for="Document" class="form-label">Document</label>
        <input type="text" asp-for="Document" class="form-control" id="Document">
    </div>

    <div class="mb-3">
        <label for="DateBirth" class="form-label">Date Birth</label>
        <input type="datetime" asp-for="DateBirth" class="form-control" id="DateBirth">
    </div>

    <div class="d-grid gap-*">
        <button type="submit" class="btn btn-primary">SignUp</button>
    </div>
</form>